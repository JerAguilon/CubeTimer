package cubetimer;
import java.util.Random;

public class Scrambler {
	String scramble;
	
	public Scrambler(String request){
		if(request.equals("3x3")){
			String[] scr = threethree();
			
			for(String item : scr){
				scramble += item  + " ";
			}
		}
	}

	public String[] threethree(){
		String[] sides = {"R", "L", "U", "D", "F", "B"};
		String[] modifier = {"", "'", "2"};
		Random rand = new Random();
		String[] scramble33 = new String[25];
	
		for(int i = 0; i<25;i++){
			
			String side = sides[rand.nextInt(6)];
			
			if(i != 0){
				while(side.equals(scramble33[i-1].substring(0, 1))) {
					side = sides[rand.nextInt(6)];
				}
			}
			
			side += modifier[rand.nextInt(3)];
			
			scramble33[i] = side;
		}
		
		return scramble33;
	}
}
